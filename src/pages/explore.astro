---
import DistinctionNetwork from '../components/DistinctionNetwork.astro';
import { VERSION, BUILD } from '../lib/version';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Distinction Network · Distinction Physics</title>
  <meta name="description" content="Explore the concepts of Distinction Physics as an interactive network. Mark concepts as understood and watch your constellation of knowledge illuminate.">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400&family=Sora:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
  <header class="site-header">
    <nav class="header-nav">
      <a href="/" class="site-title">Distinction Physics</a>
      <span class="separator">/</span>
      <span class="page-title">Explore</span>
    </nav>
    <div class="header-actions">
      <span class="version">{VERSION} · build {BUILD}</span>
      <a href="/essay" class="nav-link">Read Essay</a>
    </div>
  </header>

  <main>
    <DistinctionNetwork />
  </main>
</body>
</html>

<style>
  :root {
    --void: #0a0a0c;
    --depth-1: #12121a;
    --depth-2: #1a1a24;
    --border: #2a2a3a;
    --text-primary: #e8e8f0;
    --text-secondary: #a0a0b8;
    --text-muted: #606080;
    --accent: #4a9eff;
    --font-display: 'Cormorant Garamond', serif;
    --font-body: 'Sora', sans-serif;
    --font-mono: 'JetBrains Mono', monospace;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    height: 100%;
    overflow: hidden;
  }

  body {
    font-family: var(--font-body);
    background: var(--void);
    color: var(--text-primary);
    display: flex;
    flex-direction: column;
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 48px;
    background: rgba(10, 10, 12, 0.9);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 1.5rem;
    z-index: 100;
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .site-title {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    text-decoration: none;
  }

  .site-title:hover {
    color: var(--accent);
  }

  .separator {
    color: var(--text-muted);
  }

  .page-title {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .version {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: rgba(74, 158, 255, 0.6);
  }

  .nav-link {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--accent);
  }

  main {
    flex: 1;
    padding-top: 48px;
  }

  @media (max-width: 640px) {
    .version {
      display: none;
    }
  }
</style>
