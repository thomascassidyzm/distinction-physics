---
/**
 * Treatise Index - Landing page with all modules
 */

import {
  module0, module1, module2, module3, module4,
  module5, module6, module7, module8, module9
} from '../../content/treatise';
import SiteHeader from '../../components/SiteHeader.astro';

const modules = [module0, module1, module2, module3, module4, module5, module6, module7, module8, module9];

const epistemicColors = {
  established: '#4a9eff',
  derived: '#50c878',
  contested: '#f97316',
  open: '#a855f7',
  speculative: '#a855f7',
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Academic Treatise - Distinction as Primitive</title>
  <meta name="description" content="The complete scholarly treatment of Distinction as Primitive: 10 modules covering philosophical foundations through synthesis.">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Sora:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
  <SiteHeader currentPage="treatise" />

  <main class="treatise-index">
    <header class="page-header">
      <h1>Academic Treatise</h1>
      <p class="subtitle">The Complete Scholarly Treatment</p>
      <p class="description">
        Ten modules deriving the structure of accessible reality from two axioms.
        Includes formal definitions, theorems, derivations, and rigorous mathematical apparatus.
      </p>
    </header>

    <section class="modules-grid">
      {modules.map((module) => (
        <a href={`/treatise/module-${module.number}`} class="module-card" data-status={module.epistemicStatus}>
          <div class="module-number">Module {module.number}</div>
          <h2 class="module-title">{module.title}</h2>
          <p class="module-subtitle">{module.subtitle}</p>
          <div class="module-meta">
            <span class="section-count">{module.sections.length} sections</span>
            <span class={`status-badge ${module.epistemicStatus}`}>{module.epistemicStatus}</span>
          </div>
          <ul class="key-insights">
            {module.keyInsights?.slice(0, 2).map((insight) => (
              <li>{insight}</li>
            ))}
          </ul>
          <span class="card-arrow">→</span>
        </a>
      ))}
    </section>

    <section class="treatise-info">
      <div class="info-card">
        <h3>Epistemic Status Legend</h3>
        <div class="legend-items">
          <div class="legend-item">
            <span class="legend-dot established"></span>
            <span class="legend-label">Established</span>
            <span class="legend-desc">Logically necessary from axioms</span>
          </div>
          <div class="legend-item">
            <span class="legend-dot derived"></span>
            <span class="legend-label">Derived</span>
            <span class="legend-desc">Follows from established premises</span>
          </div>
          <div class="legend-item">
            <span class="legend-dot contested"></span>
            <span class="legend-label">Contested</span>
            <span class="legend-desc">Alternative interpretations exist</span>
          </div>
          <div class="legend-item">
            <span class="legend-dot speculative"></span>
            <span class="legend-label">Speculative</span>
            <span class="legend-desc">Exploratory; requires development</span>
          </div>
        </div>
      </div>

      <div class="info-card">
        <h3>Framework Status</h3>
        <p>V7 · Anti-fragile</p>
        <p class="info-detail">
          Survived 36 adversarial attacks. 28 antibodies generated. 22 refinements absorbed.
        </p>
      </div>
    </section>
  </main>

  <footer class="site-footer">
    <span class="footer-text">Working Draft · December 2025</span>
  </footer>
</body>
</html>

<style>
  :root {
    --void: #0a0a0c;
    --depth-1: #12121a;
    --depth-2: #1a1a24;
    --border: #2a2a3a;
    --text-primary: #e8e8f0;
    --text-secondary: #a0a0b8;
    --text-muted: #606080;
    --accent: #4a9eff;
    --established: #4a9eff;
    --derived: #50c878;
    --contested: #f97316;
    --speculative: #a855f7;
    --font-display: 'Cormorant Garamond', serif;
    --font-body: 'Sora', sans-serif;
    --font-mono: 'JetBrains Mono', monospace;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-body);
    background: var(--void);
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
  }

  .treatise-index {
    padding-top: 56px;
    min-height: 100vh;
  }

  .page-header {
    text-align: center;
    padding: 4rem 2rem 3rem;
    background: linear-gradient(180deg, var(--depth-1) 0%, var(--void) 100%);
  }

  .page-header h1 {
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    font-style: italic;
    margin-bottom: 1rem;
  }

  .description {
    max-width: 600px;
    margin: 0 auto;
    color: var(--text-muted);
    font-size: 1rem;
  }

  .modules-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem 3rem;
  }

  .module-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: var(--depth-1);
    border: 1px solid var(--border);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
    position: relative;
  }

  .module-card:hover {
    border-color: var(--accent);
    background: var(--depth-2);
    transform: translateY(-2px);
  }

  .module-number {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent);
    margin-bottom: 0.5rem;
  }

  .module-title {
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-weight: 600;
    margin-bottom: 0.375rem;
    line-height: 1.3;
  }

  .module-subtitle {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .module-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .section-count {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .status-badge {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .status-badge.established {
    color: var(--established);
    background: rgba(74, 158, 255, 0.15);
  }

  .status-badge.derived {
    color: var(--derived);
    background: rgba(80, 200, 120, 0.15);
  }

  .status-badge.contested {
    color: var(--contested);
    background: rgba(249, 115, 22, 0.15);
  }

  .status-badge.speculative {
    color: var(--speculative);
    background: rgba(168, 85, 247, 0.15);
  }

  .key-insights {
    list-style: none;
    margin: 0;
    padding: 0;
    flex: 1;
  }

  .key-insights li {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    padding-left: 1rem;
    position: relative;
    margin-bottom: 0.5rem;
  }

  .key-insights li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--text-muted);
  }

  .card-arrow {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-size: 1.25rem;
    color: var(--text-muted);
    transition: all 0.2s;
  }

  .module-card:hover .card-arrow {
    color: var(--accent);
    transform: translateX(4px);
  }

  .treatise-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem 4rem;
  }

  .info-card {
    padding: 1.5rem;
    background: var(--depth-1);
    border: 1px solid var(--border);
    border-radius: 12px;
  }

  .info-card h3 {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .legend-items {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.8125rem;
  }

  .legend-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .legend-dot.established { background: var(--established); }
  .legend-dot.derived { background: var(--derived); }
  .legend-dot.contested { background: var(--contested); }
  .legend-dot.speculative { background: var(--speculative); }

  .legend-label {
    color: var(--text-primary);
    min-width: 80px;
  }

  .legend-desc {
    color: var(--text-muted);
  }

  .info-detail {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .site-footer {
    padding: 2rem;
    border-top: 1px solid var(--border);
    text-align: center;
    display: flex;
    justify-content: center;
    gap: 2rem;
    font-size: 0.75rem;
    color: var(--text-muted);
    font-family: var(--font-mono);
  }

  @media (max-width: 768px) {
    .modules-grid {
      grid-template-columns: 1fr;
    }

    .page-header h1 {
      font-size: 2.25rem;
    }
  }
</style>
