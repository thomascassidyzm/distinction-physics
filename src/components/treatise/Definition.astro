---
/**
 * Definition.astro - Renders a formal definition block
 *
 * For DefinitionBlock from treatise types
 */
import type { EpistemicStatus } from '../../content/treatise/types';
import katex from 'katex';

interface Props {
  term: string;
  id: string;
  symbol?: string;
  epistemicStatus?: EpistemicStatus;
}

const { term, id, symbol, epistemicStatus = 'derived' } = Astro.props;

// Render symbol as KaTeX if provided
let renderedSymbol = '';
if (symbol) {
  try {
    renderedSymbol = katex.renderToString(symbol, {
      throwOnError: false,
      displayMode: false
    });
  } catch (e) {
    renderedSymbol = symbol;
  }
}

// Map epistemic status to colors
const statusColors: Record<EpistemicStatus, string> = {
  established: '#4a9eff',
  derived: '#50c878',
  contested: '#f97316',
  open: '#a855f7',
  speculative: '#a855f7'
};

const borderColor = statusColors[epistemicStatus] || statusColors.derived;
---

<div class="definition-block" id={id} data-epistemic-status={epistemicStatus}>
  <div class="definition-header">
    <span class="definition-label">Definition</span>
    {epistemicStatus && (
      <span class={`epistemic-badge ${epistemicStatus}`}>{epistemicStatus}</span>
    )}
  </div>

  <div class="definition-term">
    <strong class="term-name">{term}</strong>
    {symbol && (
      <span class="term-symbol" set:html={renderedSymbol} />
    )}
  </div>

  <div class="definition-content">
    <slot />
  </div>

  <slot name="intuition">
    <!-- Optional intuition slot -->
  </slot>

  <slot name="examples">
    <!-- Optional examples slot -->
  </slot>
</div>

<style define:vars={{ borderColor }}>
  .definition-block {
    position: relative;
    margin: 2rem 0;
    padding: 1.5rem 1.5rem 1.5rem 2rem;
    background: var(--depth-1, #12121a);
    border: 1px solid var(--border, #2a2a3a);
    border-left: 3px solid var(--borderColor);
    border-radius: 0 8px 8px 0;
  }

  .definition-block::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--borderColor);
    border-radius: 3px 0 0 3px;
  }

  .definition-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .definition-label {
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted, #606080);
  }

  .epistemic-badge {
    font-size: 0.625rem;
    padding: 0.125rem 0.5rem;
    border-radius: 3px;
    text-transform: lowercase;
    font-weight: 500;
  }

  .epistemic-badge.established {
    background: rgba(74, 158, 255, 0.15);
    color: #4a9eff;
  }
  .epistemic-badge.derived {
    background: rgba(80, 200, 120, 0.15);
    color: #50c878;
  }
  .epistemic-badge.contested {
    background: rgba(249, 115, 22, 0.15);
    color: #f97316;
  }
  .epistemic-badge.open {
    background: rgba(168, 85, 247, 0.15);
    color: #a855f7;
  }
  .epistemic-badge.speculative {
    background: rgba(168, 85, 247, 0.15);
    color: #a855f7;
  }

  .definition-term {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .term-name {
    font-family: var(--font-display, 'Cormorant Garamond', serif);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary, #e8e8f0);
  }

  .term-symbol {
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: 1rem;
    color: var(--accent, #4a9eff);
  }

  .term-symbol :global(.katex) {
    font-size: 1.1em;
  }

  .definition-content {
    font-family: var(--font-body, 'Sora', sans-serif);
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--text-secondary, #a0a0b8);
  }

  .definition-content :global(p) {
    margin: 0 0 0.75rem 0;
  }

  .definition-content :global(p:last-child) {
    margin-bottom: 0;
  }

  /* Intuition slot styling */
  .definition-block :global([slot="intuition"]) {
    margin-top: 1.25rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border, #2a2a3a);
  }

  .definition-block :global([slot="intuition"])::before {
    content: 'Intuition';
    display: block;
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted, #606080);
    margin-bottom: 0.5rem;
  }

  /* Examples slot styling */
  .definition-block :global([slot="examples"]) {
    margin-top: 1.25rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border, #2a2a3a);
  }

  .definition-block :global([slot="examples"])::before {
    content: 'Examples';
    display: block;
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted, #606080);
    margin-bottom: 0.5rem;
  }

  /* Link anchor indicator */
  .definition-block:target {
    animation: highlight-pulse 0.5s ease-out;
  }

  @keyframes highlight-pulse {
    0% { box-shadow: 0 0 0 3px var(--borderColor); }
    100% { box-shadow: 0 0 0 0 transparent; }
  }
</style>
